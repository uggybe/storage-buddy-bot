############################################
# Storage Buddy Bot - Self-Hosted Configuration
# Скопируйте этот файл в .env.local и заполните значения
############################################

############################################
# PostgreSQL Database
############################################
POSTGRES_PASSWORD=your-super-secret-postgres-password
# Используйте сильный пароль! Минимум 32 символа
# Пример генерации: openssl rand -base64 32

DB_HOST=localhost
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres

############################################
# JWT Секреты
############################################
# Генерация: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-secret-minimum-32-characters-long
JWT_EXPIRY=3600

# Генерация: openssl rand -base64 64
SECRET_KEY_BASE=your-super-secret-key-base-for-realtime-minimum-32-characters

############################################
# Supabase API Keys
############################################
# Эти ключи нужно сгенерировать используя JWT_SECRET
# Используйте https://supabase.com/docs/guides/hosting/overview#api-keys
# Или инструмент: https://github.com/supabase/cli

# Anon key (public) - используется на фронтенде
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJvbGUiOiJhbm9uIiwiaWF0IjoxNjc3NTk4MDAwLCJleHAiOjE5OTMyMTgwMDB9.YOUR_GENERATED_ANON_KEY

# Service role key (secret) - используется на бэкенде
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJvbGUiOiJzZXJ2aWNlX3JvbGUiLCJpYXQiOjE2Nzc1OTgwMDAsImV4cCI6MTk5MzIxODAwMH0.YOUR_GENERATED_SERVICE_KEY

############################################
# Supabase URLs
############################################
# Замените на ваш домен или IP адрес
SUPABASE_PUBLIC_URL=http://your-synology-ip:8000

# Для доступа извне используйте ваш внешний IP или домен
# SUPABASE_PUBLIC_URL=https://storage-buddy.yourdomain.com

############################################
# Frontend URLs
############################################
SITE_URL=http://your-synology-ip
# SITE_URL=https://storage-buddy.yourdomain.com

# Дополнительные разрешенные URL для редиректов (через запятую)
ADDITIONAL_REDIRECT_URLS=http://localhost:5173,http://localhost:3000

############################################
# Authentication
############################################
DISABLE_SIGNUP=false
ENABLE_EMAIL_SIGNUP=true
ENABLE_ANONYMOUS_USERS=false
ENABLE_EMAIL_AUTOCONFIRM=false

############################################
# SMTP Configuration (для email уведомлений)
############################################
# Если не настроено, отключите email signup или используйте autoconfirm
SMTP_ADMIN_EMAIL=admin@yourdomain.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
SMTP_SENDER_NAME=Storage Buddy Bot

############################################
# Telegram Bot
############################################
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

############################################
# Organization Settings
############################################
DEFAULT_ORGANIZATION_NAME=Storage Buddy
DEFAULT_PROJECT_NAME=Storage Buddy Bot

############################################
# Image Processing
############################################
IMGPROXY_ENABLE_WEBP_DETECTION=true

############################################
# Frontend Environment Variables
# Эти переменные используются в React приложении
############################################
VITE_SUPABASE_URL=http://your-synology-ip:8000
VITE_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJvbGUiOiJhbm9uIiwiaWF0IjoxNjc3NTk4MDAwLCJleHAiOjE5OTMyMTgwMDB9.YOUR_GENERATED_ANON_KEY

# URL для Telegram API сервиса
VITE_TELEGRAM_API_URL=http://your-synology-ip/telegram

############################################
# Development vs Production
############################################
# Для разработки используйте:
# NODE_ENV=development

# Для продакшена используйте:
NODE_ENV=production
